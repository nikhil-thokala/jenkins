pipeline {
    //agent any

   //Node name agent
   //agent {
   //node { label "workstation" }
   // }

   agent {
   label "terraform"
   }

   parameters {
  string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
      }

  environment {
        SAMPLE_URL = "google.com"
        SSH = credentials("SSH")
}

    stages {
        stage("one"){
         when { expression { when { environment name: 'PERSON', value: 'NIKHIL' } } }

            steps{
                echo "one"
            }
        }


        stage("two"){
        input {
                        message "Should we continue?"
                        ok "Yes, we should."
                    }
            steps{
                echo "two"
                sh "env"
            }
        }
    }
    post {
    always {
    echo "hello world again"
    }
    }
}